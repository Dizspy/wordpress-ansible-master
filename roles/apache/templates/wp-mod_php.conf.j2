# {{ ansible_managed }}

<VirtualHost *:80>
    DirectoryIndex index.php
    ServerName {{ website_hostname }}
    DocumentRoot "{{ remote_wordpress_dir }}"

    <Directory "{{ remote_wordpress_dir }}">
        Options Indexes FollowSymLinks

        # No .htaccess
        AllowOverride None

        Require all granted
 </Directory>
</VirtualHost>
